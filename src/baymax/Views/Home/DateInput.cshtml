<h3 class="heading-small" id="time-entry">Time Entry</h3>

<hr />
<div class="grid-row">
    <div class="column-half">
        <form>
            <div class="form-group">
                <label for="date">
                    <span class="form-label-bold">Time</span>
                    <span class="form-hint">Enter a time (24hr format, e.g. 13:05)</span>
                </label>
                <input type="time" name="time" class="form-control" value="@date.ToString("yyyy-MM-dd")"/>
                <label class="form-checkbox" for="checkbox-approx-time">
                    <input id="checkbox-approx-time" type="checkbox" value="isApproximate">
                    Approx
                </label>
            </div>
        </form>

        <div class="form-group">
            <asp-prettify>
                <form>
                    <div class="form-group">
                        <label for="date">
                            <span class="form-label-bold">Time</span>

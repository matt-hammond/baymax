@model baymax.Models.AddressModel
@{
    ViewBag.Title = "Patient Banner";
}
<h1>Address Input and Display</h1>
<h2>Display</h2>
<h3>In-form or vertically aligned address</h3>
<address>
    18 Orchard Cottage<br/>
    King’s Road<br/>
    Ipswich<br/>
    Northshire<br/>
    NS33 8KR<br/>
</address>
<h3>In-line or horizontally aligned address</h3>
<address>18 Orchard Cottage, King’s Road, Ipswich, Northshire, NS33 8KR</address>
<h2>Editing</h2>



<form asp-controller="Home" asp-action="Address" method="post" class="form-horizontal" role="form">

    <div asp-validation-toggle="On">
        <div asp-validation-summary="ValidationSummary.All" class="error-summary" role="group" aria-labelledby="error-summary-heading-example-2" tabindex="-1">

            <h1 class="heading-medium error-summary-heading" id="error-summary-heading-example-2">
                Message to alert the user to a problem goes here
            </h1>

            <p>
                Optional description of the error(s) and how to correct them
            </p>

            <ul class="error-summary-list">
                <li><a href="#example-full-name">Descriptive link to the question with an error</a></li>
                <li><a href="#example-ni-number">Descriptive link to the question with an error</a></li>
            </ul>

        </div>

    </div>
        <h1 class="heading-large">
            Your personal details
        </h1>

        <div class="form-group" asp-validation-add-class-for="Line1" asp-validation-class-name="error">

            <label for="Line1">

                <span class="form-label-bold">Line 1</span>
                <span class="form-hint">e.g. 18 Orchard Cottage</span>
                <span class="error-message" asp-validation-for="Line1"></span>

            </label>

            <input class="form-control" id="example-full-name" type="text" name="fullName" value="" aria-describedby="error-message-full-name">
        </div>


        <input class="button" type="submit" value="Continue">


        <!-- / #guide-errors -->
</form>

